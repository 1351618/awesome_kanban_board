{
    "compilerOptions": {
        "jsx": "react",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "module": "esnext",
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true,
        "skipLibCheck": true
    },
    "include": ["src"]
}